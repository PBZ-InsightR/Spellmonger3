<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Text?>
<?xml-stylesheet href="@style.css" type="text/css" ?>

<Pane id="mainPane" xmlns="http://javafx.com/javafx/8.0.76-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.insightr.sample.ControllerPlay">
    <SplitPane fx:id="split" dividerPositions="0.5">
        <items>
            <AnchorPane fx:id="player1_dad">
                <children>
                    <Pane fx:id="Player1" layoutX="14.0" layoutY="40.0">
                        <children>
                            <Text fx:id="name1" layoutY="73.0" text="Valentin" wrappingWidth="150" />
                            <Text fx:id="life_points1" layoutY="90.0" text="10" wrappingWidth="150" />
                        </children>
                    </Pane>
                    <Button fx:id="deck1" layoutX="180.0" layoutY="50.0" onAction="#draw_player_1" />
                    <ScrollPane fx:id="hand1" layoutX="280.0" layoutY="40.0" />
                    <Pane fx:id="discard1" layoutX="650.0" layoutY="40.0" />
                    <Button fx:id="pass1" text="J'ai fini mon tour" layoutX="600.0" layoutY="40.0" onAction="#pass_player_1" />
                    <ScrollPane fx:id="list_creatures1" layoutX="30.0" layoutY="196.0" />
                </children>
            </AnchorPane>
            <AnchorPane fx:id="player2_dad">
                <children>
                    <Pane fx:id="Player2" layoutX="14.0" layoutY="170.0">
                        <children>
                            <Text fx:id="name2" layoutY="73.0" text="Natacha" wrappingWidth="150" />
                            <Text fx:id="life_points2" layoutY="90.0" text="10" wrappingWidth="150" />
                        </children>
                    </Pane>
                    <Button fx:id="deck2"   layoutX="180.0" layoutY="180.0" onAction="#draw_player_2" />
                    <ScrollPane fx:id="hand2" layoutX="280.0" layoutY="170.0" />
                    <Pane fx:id="discard2" layoutX="640.0" layoutY="170.0" />
                    <Button fx:id="pass2" text="J'ai fini mon tour" layoutX="600.0" layoutY="180.0" onAction="#pass_player_2" />
                    <ScrollPane fx:id="list_creatures2" layoutX="30.0" layoutY="14.0" />
                </children>
            </AnchorPane>
        </items>
    </SplitPane>
</Pane>
